{
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": false,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "incremental": true,
    "removeComments": false,
    "plugins": [
      {
        "name": "@effect/language-service",
        "transform": "@effect/language-service/transform",
        "diagnostics": true,
        "diagnosticSeverity": {
          "floatingEffect": "warning"
        },
        "quickinfo": true,
        "completions": true,
        "allowedDuplicatedPackages": ["@effect/platform-node-shared"]
      }
    ],
    "paths": {
      "@crate/cli": ["./packages/cli/src/index.js"],
      "@crate/cli/*": ["./packages/cli/src/*.js"],
      "@crate/cli/test/*": ["./packages/cli/test/*.js"],
      "@crate/domain": ["./packages/domain/src/index.js"],
      "@crate/domain/*": ["./packages/domain/src/*.js"],
      "@crate/domain/test/*": ["./packages/domain/test/*.js"],
      "@crate/server": ["./packages/server/src/index.js"],
      "@crate/server/*": ["./packages/server/src/*.js"],
      "@crate/server/test/*": ["./packages/server/test/*.js"]
    }
  }
}
